    oeis: A000027
  triangle:
    formula: (k+1)(k+2)/2
    oeis: A000217
  tetrahedron:
    formula: (k+1)(k+2)(k+3)/6
    oeis: A000292
  quadrilateral:
    formula: (k+1)^2
    oeis: A000290
  hexahedron:
    formula: (k+1)^3
    oeis: A000578
  prism:
    formula: (k+1)^2(k+2)/2
